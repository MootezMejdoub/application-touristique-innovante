{{ form_start(form                     , {'attr' : {'class':'forms-sample'} }) }}
<div class="form-group row">
    {{ form_label(form.nom, "Nom", {'label_attr' : {'class':'col-sm-3 col-form-label'}})}}
    <div class="col-sm-9">
        {{ form_widget(form.nom, {'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.address, "Address",{'label_attr' : {'class':'col-sm-3 col-form-label'}}) }}
    <div class="col-sm-9">
        {{ form_widget(form.address,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.address) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.description, "description", {'label_attr' : {'class':'col-sm-3 col-form-label'}} ) }}
    <div class="col-sm-9">
        {{ form_widget(form.description,{'attr' : {'class':'form-control', 'rows':'4'}} ) }}
        {{ form_errors(form.description) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.type, "Type", {'label_attr' : {'class':'col-sm-3 col-form-label'}} ) }}
    <div class="col-sm-9">
        {{ form_widget(form.type  , {'attr' : {'class':'form-control'}} ) }}
        {{ form_errors(form.type) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.note, " ", {'label_attr' : {'class':'col-sm-3 col-form-label'}} ) }}
    <div class="col-sm-9">
        {{ form_widget(form.note, {'attr' : {'class':'form-control'}} ) }}
        {{ form_errors(form.note) }}
    </div>
</div>

<div class="form-group row">

    <button class="btn">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
