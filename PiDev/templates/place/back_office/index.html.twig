        </nav>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">





                <div class="row">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Les Plans</h4>
                                <p class="card-description"> NB: Afficher les Details pour Modifier ou Supprimer un Plan
                                </p>
                                <div class="table-responsive">

                                    <table class="table" style="width: 100%;border-collapse: collapse;">
                                        <thead>
                                        <tr>

                                            <th>Nom</th>
                                            <th>Note</th>
                                            <th>Address</th>
                                            <th>Description</th>
                                            <th>Type</th>
                                            <th>actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for place in places %}
                                            <tr style="color: #c5cbed">
                                                <td>{{ place.nom }}</td>
                                                <td>{{ place.address }}</td>
                                                <td>{{ place.description }}</td>
                                                <td>{{ place.type }}</td>
                                                {% if place.note < 5 %}
                                                    <td class="text-danger"> {{ place.note }}/10 <i class="mdi mdi-arrow-down"></i></td>
                                                {% else %}
                                                    <td class="text-success"> {{ place.note }}/10 <i class="mdi mdi-arrow-up"></i></td>
                                                {% endif %}
                                                <td>
                                                    <a href="{{ path('app_place_show', {'id': place.id}) }}"><label class="badge badge-info">Afficher Details</label></a>
